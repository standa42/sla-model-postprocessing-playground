ScreenManager:
    id: screen_manager
    
    MainScreen:
        id: main_screen
        name: 'MainScreen'
        manager: 'screen_manager'

<MainScreen>
    BoxLayout:
        orientation: 'horizontal'
          
        # main/layer part
        BoxLayout:
            size_hint: (0.8, 1)
            orientation: 'horizontal'
     
            # zoom and vertical slider
            BoxLayout:
                size_hint: (0.1, 1)
                orientation: 'vertical'
     
                # zoom
                BoxLayout:
                    size_hint: (1, 0.1)
                    orientation: 'vertical'
                    # zoom buttons
                    BoxLayout:
                        size_hint: (1, 1)
                        orientation: 'horizontal'
                              
                        # minus zoom button
                        Button:
                            id: zoom_minus_button
                            size_hint: (0.5, 1)
                            text: '-'
                            on_press: root.zoom_minus_click()
                        # plus zoom button
                        Button:
                            id: zoom_plus_button
                            size_hint: (0.5, 1)
                            text: '+'
                            on_press: root.zoom_plus_click()
     
                # vertical slider
                Slider:
                    size_hint: (1, 0.9)
                    id: layer_vertical_slider
                    min: 1
                    max: 100
                    value: 1
                    step: 1
                    orientation: 'vertical'
                    on_value: root.layer_vertical_slider_slide()
     
            # horizontal slider and layer image
            BoxLayout:
                size_hint: (0.9, 1)
                orientation: 'vertical'
     
                # horizontal slider
                Slider:
                    size_hint: (1, 0.1)
                    id: layer_horizontal_slider
                    min: 1
                    max: 100
                    value: 1
                    step: 1
                    on_value: root.layer_horizontal_slider_slide()
     
                # layer image
                Image:
                    id: layer_image
                    size_hint: (1, 0.9)
     
        # right menu
        BoxLayout:
            size_hint: (0.2, 1)
            orientation: 'vertical'
             
            # count of .sl1 files
            Label:
                id: available_files_label
                text: 'Currently available: default_text .sl1 files'
                size_hint: (1, 0.1)
     
            Button:
                id: available_files_button
                size_hint: (1, 0.1)
                text: 'Refresh files'
                on_press: root.available_files_button_click()
               
            # switching between .sl1 files
            BoxLayout:
                id: files_list
                size_hint: (1, 0.4)
                orientation: 'vertical'
     
            # switching between layers
            Label:
                id: available_layer_label
                text: 'Current layer: default_text'
                size_hint: (1, 0.1)
     
            BoxLayout:
                size_hint: (1, 0.1)
                orientation: 'horizontal'
                Button:
                    id: layer_previous_button
                    text: '<'
                    on_press: root.layer_previous_button_click()
                Button:
                    id: layer_next_button
                    text: '>'
                    on_press: root.layer_next_button_click()
     
            Label:
                text: 'Following keyboard bindings are available\nrefresh: R\nnext/prev file: left/right arrow\nnext/prev layer: up/down arrow\nzoom in/out: E/Q\nslide up/down: W/S\nslide left/right: D/A'
                multiline: True
                size_hint: (1, 0.3)